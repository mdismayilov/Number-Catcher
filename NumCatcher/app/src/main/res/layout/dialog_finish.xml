<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorOne"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_finish_yourScoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/aldrich"
        android:textColor="@color/neonYellow"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/dialog_finish_bestScoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aldrich"
        android:textColor="@color/neonGreenish"
        android:textSize="24sp" />

    <Button
        android:id="@+id/dialog_finish_restartBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/aldrich"
        android:text="@string/restart"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/dialog_finish_homeBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/aldrich"
        android:text="@string/home"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

</LinearLayout>